<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="cy.ac.ucy.cs.anyplace.logger">

  <!-- FLIR attachable usb unit -->
<!--  <uses-feature android:name="android.hardware.usb.host" android:required="true" />-->
  <!-- CHECK: FLIR requires gles3.0. is yolo ok with that? anyplace? -->
  <!-- <uses-feature android:glEsVersion="0x00020000" android:required="true" />-->
<!--  <uses-feature android:glEsVersion="0x00030000" android:required="true" />-->

  <uses-permission android:name="com.dmsl.anyplace.permission.MAPS_RECEIVE" />
  <uses-permission android:name="android.permission.INTERNET" />
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

  <!--  TODO do not use sd card any more. -->
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
  <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
  <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />

  <!--
       The following two permissions are not required to use
       Google Maps Android API v2, but are recommended.
  -->
  <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
  <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
  <uses-permission android:name="android.permission.WAKE_LOCK" />


  <!-- android:requestLegacyExternalStorage="true"-->
  <!--android:theme="@style/Theme.AnyplaceTheme"-->
  <application
      tools:ignore="LockedOrientationActivity"
      android:name=".LoggerApp"
      android:icon="@drawable/ic_launcher_logger"
      android:label="@string/app_name"
      android:theme="@style/AppTheme"
      >
    <activity
        android:name="StartActivity"
        android:screenOrientation="portrait"
        android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen"
        tools:ignore="LockedOrientationActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <activity
      android:name="cy.ac.ucy.cs.anyplace.logger.legacy.AnyplaceAboutActivity"
      android:label="@string/app_name_about"
      android:theme="@android:style/Theme.Dialog" >
      <!--      <intent-filter>-->
      <!--        <action android:name="android.intent.action.MAIN" />-->
      <!--        <category android:name="android.intent.category.DEFAULT" />-->
      <!--      </intent-filter>-->
    </activity>

    <!-- singleTop before <0.8 ! -->

    <activity
      android:name=".legacy.SearchPOIActivity"
      android:label="Search POI"
      android:launchMode="singleTop"
      android:screenOrientation="portrait"
      android:theme="@android:style/Theme.Light" >
      <intent-filter>
        <action android:name="android.intent.action.SEARCH" />
      </intent-filter>

      <meta-data
        android:name="android.app.searchable"
        android:resource="@xml/searchable" />
    </activity>
    <activity
      android:name="cy.ac.ucy.cs.anyplace.logger.legacy.SelectBuildingActivityOLD"
      android:excludeFromRecents="true"
      android:label="@string/app_name"
      android:screenOrientation="portrait"
      android:theme="@android:style/Theme.Dialog" >
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.DEFAULT" />
      </intent-filter>
    </activity>

  </application>

</manifest>